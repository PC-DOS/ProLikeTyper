<Controls:MetroWindow x:Class="CoderWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    Title="CodeViewer" 
    WindowTitleBrush="Gray" NonActiveWindowTitleBrush="LightGray" TitleForeground="Black"
    Background="Black" Foreground="#FF00FF00" 
    FontFamily="Consolas"
    Height="525" Width="735" MinHeight="250" MinWidth="450">
    <ScrollViewer x:Name="scrCodeContainer">
        <TextBlock x:Name="lblCode" TextWrapping="Wrap" FontSize="16" VerticalAlignment="Top" />
    </ScrollViewer>
</Controls:MetroWindow>
