<Controls:MetroWindow x:Class="CompilerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    Title="Compiler" 
    WindowTitleBrush="Gray" NonActiveWindowTitleBrush="LightGray" TitleForeground="Black"
    Background="#FF0000FF" Foreground="#FF0000FF" 
    FontFamily="Consolas"
    Height="325" Width="735" MinHeight="300" MinWidth="550">
    <Controls:MetroWindow.Resources>
        <Style x:Key="{x:Type ProgressBar}" TargetType="{x:Type ProgressBar}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ProgressBar}">
                        <Grid x:Name="Root">
                            <Border 
                                Name="PART_Track" 
                                CornerRadius="0" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" />
                            <Border 
                                Name="PART_Indicator" 
                                CornerRadius="0" 
                                Background="{TemplateBinding Foreground}" 
                                BorderBrush="Black"  
                                BorderThickness="0" 
                                HorizontalAlignment="Left"
                                Margin="5" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Getting vertical style working using technique described here: http://stackoverflow.com/a/6849237/7532 -->
                            <Trigger Property="Orientation" Value="Vertical">
                                <Setter TargetName="Root" Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="270" />
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Root" Property="Width"
                                    Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Height}"
                                />
                                <Setter TargetName="Root" Property="Height"
                                    Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Width}"
                                />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Controls:MetroWindow.Resources>
    <Grid>
        <Grid Background="LightGray" Margin="25">
            <Grid.Effect>
                <DropShadowEffect Color="Black" Direction="-45" ShadowDepth="10" Opacity="1" BlurRadius="0" />
            </Grid.Effect>
            <Border BorderBrush="#FF0000FF" BorderThickness="2" Margin="10"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="10">
                <TextBlock Text="Compiling..." FontSize="18" TextAlignment="Center" Margin="10" />
                <TextBlock Text="Current step:" FontSize="14" TextAlignment="Left" Margin="10,0" />
                <TextBlock x:Name="lblFileName" Text="/DB/1234567890abcedf/aaz/1db5" FontSize="14" TextAlignment="Left" Margin="10,5,10,0" />
                <ProgressBar x:Name="prgDownloadCurrent" Foreground="#FF0000FF" Margin="10,5,10,0" BorderBrush="#FF0000FF" Background="Transparent"  Height="25" Value="5" />
                <TextBlock x:Name="lblFileSize" Text="25 MB / 245 MB, 12 Mbps" FontSize="14" TextAlignment="Left" Margin="10,5,10,0" Visibility="Collapsed" />
                <TextBlock Text="Total progress:" FontSize="14" TextAlignment="Left" Margin="10,10,10,0" />
                <ProgressBar x:Name="prgDownloadTotal" Foreground="#FF0000FF" Margin="10,5,10,0" BorderBrush="#FF0000FF" Background="Transparent" Height="25" Value="25" />
                <TextBlock x:Name="lblFileCount" Text="25 / 1245 Steps | 0 Errors | 0 Warnings" FontSize="14" TextAlignment="Left" Margin="10,5,10,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Controls:MetroWindow>
